<div class="pageTitle">
  <h1>Store manager - Product Detail</h1>
</div>

<div class="toolbar">
  <% if SyncEngine::logged_in > 0 %>
      <div class="leftItem blueButton">
        <a href="<%= url_for :controller => :Settings, :action => :do_sync %>">Sync</a>
      </div>
      <div class="rightItem regularButton">
        <a href="<%= url_for :controller => :Settings, :action => :logout %>">Logout</a>
      </div>
  <% else %>
      <div class="rightItem regularButton">
        <a href="<%= url_for :controller => :Settings, :action => :login %>">Login</a>
      </div>
  <% end %>
</div>

<div class="content">
  <table>
    <tr>
      <td>Name</td>
      <td>my Product</td>
    </tr>
    <tr>
      <td>Price</td>
      <td>$<%=@price%>/lbs</td>
    </tr>
    <tr>
      <td colspan="2">
        <img src="/public/images/apple.jpeg" alt="">
      </td>
    </tr>
  </table>
</div>