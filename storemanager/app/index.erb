<div class="pageTitle">
  <h1>Store manager - Products</h1>
</div>

<div class="toolbar">
  <% if SyncEngine::logged_in > 0 %>
      <div class="leftItem blueButton">
        <a href="<%= url_for :controller => :Settings, :action => :do_sync %>">Sync</a>
      </div>
      <div class="rightItem regularButton">
        <a href="<%= url_for :controller => :Settings, :action => :logout %>">Logout</a>
      </div>
  <% else %>
      <div class="rightItem regularButton">
        <a href="<%= url_for :controller => :Settings, :action => :login %>">Login</a>
      </div>
  <% end %>
</div>

<div class="content">
  <ul>
    <li>
      <a href="<%= url_for :controller => :Settings, :action => :Products %>"><span class="title">Products</span><span class="disclosure_indicator"/></a>
	  <a href="#"><span class="title">People</span><span class="disclosure_indicator"/></a>
    </li>
  </ul>
</div>